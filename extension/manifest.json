{
  "manifest_version": 2,
  "name": "Light Markdown Editor",
  "short_name": "lightmd",
  "version": "1.0",
  "author": "JÃ¸rgen NYSTAD",

  "description": "A standalone Markdown editor",
  "icons": {
     "16": "icon16.png",
     "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "unlimitedStorage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "Launch Markdown Editor"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
